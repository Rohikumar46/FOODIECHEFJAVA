<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define a servlet for the sign-in page -->
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>Register</servlet-class> <!-- Specify your servlet class here -->
    </servlet>

    <!-- Map the servlet to a URL pattern -->
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/register</url-pattern> <!-- URL pattern for the sign-in page -->
    </servlet-mapping>
    
        <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>Login</servlet-class> <!-- Specify your servlet class here -->
    </servlet>

    <!-- Map the servlet to a URL pattern -->
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/login</url-pattern> <!-- URL pattern for the sign-in page -->
    </servlet-mapping>
    
    
      <servlet>
        <servlet-name>c</servlet-name>
        <servlet-class>Reciep</servlet-class> <!-- Specify your servlet class here -->
    </servlet>

    <!-- Map the servlet to a URL pattern -->
    <servlet-mapping>
        <servlet-name>c</servlet-name>
        <url-pattern>/submit-recipe</url-pattern> <!-- URL pattern for the sign-in page -->
    </servlet-mapping>
    
    
    
	
    
</web-app>
